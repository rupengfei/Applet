.card {
  margin: 10px;
  position: relative; /** 相对定位 **/
}

.bg {
  width: 100%;
  border-radius: 5px;
  box-shadow: 5px 5px 5px #5F687E;
}

.logo {
  width: 80px;
  position: absolute; /** 绝对定位 **/
  top: 10px;
  right: 20px;
}

.info {
  position: absolute;
  left: 30px;
  bottom: 30px;
  font-size: 16px;
  color: #5F687E;
}

.name {
  font-weight: bold;
}

.desc {
  font-size: 12px;
  color: #9196a3;
  margin-bottom: 10px;
}
